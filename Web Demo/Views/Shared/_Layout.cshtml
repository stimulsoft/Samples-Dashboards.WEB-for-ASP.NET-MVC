<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Web Demo</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <table class="main" cellpadding="0" cellspacing="0" border="0">
        <tr>
            <td class="menu">
                <h3>Dashboards Demo</h3>
                <div style="height: 2px; border-top: dashed 1px #c8c8c8; padding:3px;"></div>
                <div style="overflow: auto; position: absolute; top: 37px; bottom: 50px; left: 0px; width: 270px;">
                    @if (@ViewBag.FileNames != null)
                    {
                        foreach (string fileName in @ViewBag.FileNames)
                        {
                            var currentFileName = ViewContext.RouteData.Values["id"].ToString();
                            @Html.ActionLink(fileName.Substring(9), "Dashboards", "View", new { id = fileName }, new { @class = currentFileName == fileName ? "current" : "" })
                        }
                    }
                </div>
            </td>
            <td class="line" rowspan="2">
                <div class="line"></div>
            </td>
            <td class="viewer" rowspan="2">
                @RenderBody()
            </td>
        </tr>
        <tr>
            <td class="link">
                <div style="height: 2px; border-top: dashed 1px #c8c8c8; padding:3px;"></div>
                <a href="https://www.stimulsoft.com/" target="_blank"><img class="link" alt="www.stimulsoft.com" border="0" src="/Images/hyperlink.png" /></a>
            </td>
        </tr>
    </table>
</body>
</html>
